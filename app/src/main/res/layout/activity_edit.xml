<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="?attr/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.jun.veritecpro04.EditActivity">

    <TextView
        android:id="@+id/uriView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="TextView"
        android:textColor="@android:color/background_light" />


    <!--
        <EditText
            android:id="@+id/accTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.51"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/voice"
            tools:layout_editor_absoluteY="106dp" />
    -->

    <ImageView
        android:id="@+id/imgPreView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.43"
        app:srcCompat="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="189dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/coment" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/accTxt"
            android:layout_alignParentTop="true"
            android:background="@drawable/clear5"
            android:scaleType="fitXY"
            app:srcCompat="@android:color/transparent" />

        <EditText
            android:id="@+id/accTxt"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.51"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:textColor="@android:color/background_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:elevation="0dp"
        android:paddingBottom="7dp"
        android:paddingTop="5dp">

        <ImageButton
            android:id="@+id/voice"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/mic5"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="132dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dbadd" />

        <ImageButton
            android:id="@+id/reShoot"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/camera5"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="90dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/dbadd" />

        <ImageButton
            android:id="@+id/dbadd"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/down5"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="260dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</LinearLayout>
